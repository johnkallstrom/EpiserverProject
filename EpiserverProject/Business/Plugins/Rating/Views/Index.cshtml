@using System.Web.Mvc
@using EpiserverProject.Business.Plugins.Rating.ViewModels

@inherits WebViewPage<RatingViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rating Plugin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="~/Business/Plugins/Rating/Static/css/rating.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 class="text-center my-5">Rating Plugin</h1>
        <table class="table table-bordered" id="ratings-table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody id="ratings-table-body">
            </tbody>
        </table>
        <div class="pt-3">
            <button class="btn btn-primary" id="delete-all-button">Delete All</button>
        </div>
    </div>

    <script src="~/Business/Plugins/Rating/Static/js/rating.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>
