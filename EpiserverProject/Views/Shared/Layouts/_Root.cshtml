@using EpiserverProject.ViewModels
@using EpiserverProject.Models.Pages
@using EPiServer.Core

@model IPageViewModel<SitePageData>

<!DOCTYPE html>
<html lang="@Model.CurrentPage.Language.Name">
<head>
    <title>Episerver Website</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="~/Static/css/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container py-2">
            <a class="navbar-brand" href="@Url.ContentUrl(ContentReference.StartPage)">Episerver Website</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#root-navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            @foreach (var page in Model.Layout.Menu)
            {
                <div class="collapse navbar-collapse" id="root-navbar">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.ContentUrl(page.ContentLink)">@page.Name</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="bg-dark">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 text-center text-md-left my-2">
                    <p class="text-white"><span class="text-primary">Episerver</span> Website &copy; @DateTime.Now.Year</p>
                </div>

                <div class="col-md-4 text-white text-center text-md-left my-2">
                    <div class="text-white">
                        <p>Tegnérgatan 4</p>
                        <p>113 58 Stockholm</p>
                        <p>Sweden</p>
                    </div>
                    <p><a href="mailto:support@episerverwebsite.com">support@episerverwebsite.com</a></p>
                </div>

                <div class="col-md-4 text-white text-center text-md-left my-2">
                    <span class=" font-weight-bold ">About this website</span>
                    <p class="text-primary">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam non bibendum enim, eget elementum purus.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Static/js/script.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>